<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="model.business.knowledge">
	<class name="File" table="files">
		<id name="id" column="id" type="int">
			<generator class="native" />
		</id>	
		<property name="fileName" column="fileName" type="string" not-null="true" />
		<property name="content" column="content" type="binary" not-null="true" />
	</class>
</hibernate-mapping>